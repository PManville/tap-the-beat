{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"skipLibCheck": true
	},
	"filesGlob": [
		"src/**/*.tsx",
		"src/**/*.ts",
		"dev/**/*.tsx",
		"dev/**/*.ts"
	],
	"include": [
		"./**/*"
	],
	"exclude": [
		"node_modules"
	]
}
